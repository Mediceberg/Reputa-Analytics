{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "server/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server.ts" },
    { "source": "/reputa-admin-portal", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
