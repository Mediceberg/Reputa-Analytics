# MongoDB Configuration (Production)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/<database>?retryWrites=true&w=majority
MONGODB_DB_NAME=reputa-v3

# Upstash Redis Configuration (Production)
# The code checks BOTH sets of variables for compatibility:
#   KV_REST_API_URL / KV_REST_API_TOKEN  (Vercel KV)
#   UPSTASH_REDIS_REST_URL / UPSTASH_REDIS_REST_TOKEN  (Upstash direct)
# Set at least one pair:
KV_REST_API_URL=https://<your-vercel-kv-url>.upstash.io
KV_REST_API_TOKEN=<your-vercel-kv-token>
UPSTASH_REDIS_REST_URL=https://<your-upstash-redis-url>.upstash.io
UPSTASH_REDIS_REST_TOKEN=<your-upstash-redis-token>

# Server Configuration
PORT=3000
NODE_ENV=production

# Admin Portal Password (used for /reputa-admin-portal)
ADMIN_PASSWORD=admin123

# Protocol Version
PROTOCOL_VERSION=3.0
